<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="model" type="co.esclub.searchnshop.viewmodel.MainViewModel"/>
    </data>
    <RelativeLayout

            android:layout_height="match_parent"
            android:layout_width="match_parent">

        <RelativeLayout
                android:id="@+id/layoutAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
        </RelativeLayout>


        <android.support.design.widget.CoordinatorLayout
                android:layout_above="@+id/layoutAds"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="co.esclub.searchnshop.activity.MainActivity">
            <android.support.design.widget.AppBarLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:theme="@style/AppTheme.AppBarOverlay">


                <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        app:title="@{safeUnbox(model.isDeleteMode) ? @string/delete_mode : @string/app_name}"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?attr/colorPrimary"
                        app:titleTextColor="@color/textPrimary"
                        app:subtitleTextColor="@color/textPrimary"
                        app:popupTheme="@style/AppTheme.PopupOverlay">
                </android.support.v7.widget.Toolbar>


            </android.support.design.widget.AppBarLayout>

            <include layout="@layout/content_main"
                     app:model="@{model}"/>

        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>
